{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prHourlyLimit": 100,
  "automerge": true,
  "automergeSchedule": ["after 10pm and before 5:00am"],
  "schedule": ["after 10pm and before 5:00am"],
  "platformAutomerge": false,
  "packageRules": [
    {
      "matchPackagePatterns": ["chai"],
      "automerge": true,
      "automergeSchedule": ["after 1pm and before 5:00am"],
      "schedule": ["after 1pm and before 5:00am"],
      "platformAutomerge": false
    }
  ]
}
